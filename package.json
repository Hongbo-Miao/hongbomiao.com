{
  "name": "hongbomiao.com",
  "homepage": "https://www.hongbomiao.com",
  "description": "Hongbo Miao â€“ Making magic happen",
  "author": "Hongbo Miao",
  "keywords": [
    "Hongbo Miao",
    "magic"
  ],
  "private": true,
  "engines": {
    "node": "15.x"
  },
  "scripts": {
    "commit": "commit",
    "setup": "sh ./bin/setup.sh",
    "clean": "sh ./bin/clean.sh",
    "build": "sh ./bin/build.sh",
    "start": "cd server && yarn serve:production",
    "start:development": "cd server && yarn serve:development",
    "lint:js": "eslint . --ext .js,.ts,.tsx",
    "lint:js:report": "eslint-nibble . --ext .js,.ts,.tsx",
    "lint:js:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\" \"!**/build/**\" \"!**/dist/**\" \"!**/coverage/**\"",
    "lint:css:fix": "stylelint \"**/*.css\" \"!**/build/**\" \"!**/dist/**\" \"!**/coverage/**\" --fix",
    "test": "cd client && yarn test && cd ../server && yarn test",
    "test:coverage": "sh ./bin/testCoverage.sh",
    "test:coverage:publish": "cat coverage/lcov.info | codecov",
    "test:cypress:gui": "cypress open --config-file ./cypress/cypress.json",
    "test:cypress:headless": "cypress run --config-file ./cypress/cypress.json",
    "test:cypress:headless:ci": "sh ./bin/testCypressHeadlessCI.sh",
    "docker:build": "docker-compose -f docker-compose.development.yml build",
    "docker:up": "docker-compose -f docker-compose.development.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.development.yml stop",
    "docker:down": "docker-compose -f docker-compose.development.yml down --volumes",
    "docker:delete": "docker system prune"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/prompt-cli": "11.0.0",
    "@cypress/skip-test": "2.5.0",
    "@types/node": "14.14.5",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "codecov": "3.8.0",
    "commitizen": "4.2.2",
    "cross-env": "7.0.2",
    "cypress": "5.5.0",
    "eslint": "7.12.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.14.0",
    "eslint-nibble": "6.0.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-jest-dom": "3.2.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-testing-library": "3.9.2",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lint-staged": "10.5.0",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "start-server-and-test": "1.11.5",
    "stylelint": "13.7.2",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "2.3.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-high-performance-animation": "1.5.1",
    "stylelint-prettier": "1.1.2",
    "typescript": "4.0.5"
  }
