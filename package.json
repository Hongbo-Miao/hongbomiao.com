{
  "name": "hongbomiao.com",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://hongbomiao.com/",
  "scripts": {
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "prebuild": "./bin/prebuild.sh",
    "build": "react-scripts build",
    "postbuild": "./bin/postbuild.sh",
    "analyze": "react-scripts build && source-map-explorer 'build/static/js/*.js'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\" \"!**/build/**\" \"!**/coverage/**\"",
    "lint:css:fix": "stylelint \"**/*.css\" \"!**/build/**\" \"!**/coverage/**\" --fix",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lh": "lighthousebot",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "chromatic test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/shared/lib/*"
    ]
  },
  "dependencies": {
    "bulma": "0.7.5",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.1.2"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/node": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.6.0",
    "@storybook/addon-actions": "5.2.1",
    "@storybook/addon-links": "5.2.1",
    "@storybook/addon-storyshots": "5.2.1",
    "@storybook/addons": "5.2.1",
    "@storybook/react": "5.2.1",
    "@types/enzyme": "3.10.3",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-router-dom": "4.3.5",
    "@types/storybook__react": "4.0.2",
    "@typescript-eslint/eslint-plugin": "2.3.1",
    "@typescript-eslint/parser": "2.3.1",
    "babel-plugin-macros": "2.6.1",
    "coveralls": "3.0.6",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "6.4.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.14.3",
    "lighthousebot": "https://github.com/GoogleChromeLabs/lighthousebot",
    "prettier": "1.18.2",
    "purgecss": "1.4.0",
    "react-test-renderer": "16.9.0",
    "require-context.macro": "1.2.1",
    "sitemap": "4.1.1",
    "source-map-explorer": "2.1.0",
    "storybook-chromatic": "2.2.2",
    "stylelint": "11.0.0",
    "stylelint-config-prettier": "5.2.0",
    "stylelint-config-standard": "19.0.0",
    "stylelint-prettier": "1.1.1",
    "typescript": "3.6.3",
    "wait-for-netlify-preview": "1.2.1"
  }
}
