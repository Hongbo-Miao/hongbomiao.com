{
  "name": "hongbomiao.com",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://hongbomiao.com/",
  "scripts": {
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "prebuild": "./bin/prebuild.sh",
    "build": "react-scripts build",
    "postbuild": "./bin/postbuild.sh",
    "lint": "eslint .",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "sitemap": "babel-node src/shared/utils/buildSitemap.js",
    "lh": "lighthousebot"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/shared/lib/*"
    ]
  },
  "dependencies": {
    "bulma": "0.7.5",
    "core-js": "3.2.1",
    "normalize.css": "8.0.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/node": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "coveralls": "3.0.6",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "lighthousebot": "https://github.com/GoogleChromeLabs/lighthousebot",
    "sitemap": "4.1.1",
    "wait-for-netlify-preview": "1.2.1"
  }
}
