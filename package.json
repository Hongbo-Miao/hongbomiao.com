{
  "name": "hongbomiao.com",
  "homepage": "https://hongbomiao.com",
  "description": "Hongbo Miao â€“ Making magic happen",
  "author": "Hongbo Miao",
  "keywords": [
    "Hongbo Miao",
    "magic"
  ],
  "private": true,
  "engines": {
    "node": ">=14.9.0"
  },
  "scripts": {
    "commit": "commit",
    "setup": "sh ./bin/setup.sh",
    "clean": "sh ./bin/clean.sh",
    "build": "sh ./bin/build.sh",
    "start": "cd server && yarn serve:pm2:production",
    "start:development": "cd server && yarn serve:pm2:development",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\" \"!**/build/**\" \"!**/dist/**\" \"!**/coverage/**\"",
    "lint:css:fix": "stylelint \"**/*.css\" \"!**/build/**\" \"!**/dist/**\" \"!**/coverage/**\" --fix",
    "test": "cd client && yarn test && cd ../server && yarn test",
    "test:coverage": "sh ./bin/testCoverage.sh",
    "test:coverage:report": "cat coverage/lcov.info | ./node_modules/.bin/codecov",
    "test:cypress:gui": "./node_modules/.bin/cypress open --config-file ./cypress/cypress.json",
    "test:cypress:headless": "./node_modules/.bin/cypress run --config-file ./cypress/cypress.json",
    "test:cypress:headless:ci": "sh ./bin/testCypressHeadlessCI.sh",
    "docker:build": "docker-compose -f docker-compose.development.yml build",
    "docker:up": "docker-compose -f docker-compose.development.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.development.yml stop",
    "docker:down": "docker-compose -f docker-compose.development.yml down --volumes",
    "docker:delete": "docker system prune"
  },
  "devDependencies": {
    "@babel/eslint-plugin": "7.11.5",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@commitlint/prompt-cli": "9.1.2",
    "@cypress/skip-test": "2.5.0",
    "@types/node": "14.10.0",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "codecov": "3.7.2",
    "commitizen": "4.2.1",
    "cross-env": "7.0.2",
    "cypress": "5.1.0",
    "eslint": "7.8.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-cypress": "2.11.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.0",
    "eslint-plugin-jest-dom": "3.2.3",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-testing-library": "3.8.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.3.0",
    "nyc": "15.1.0",
    "prettier": "2.1.1",
    "start-server-and-test": "1.11.3",
    "stylelint": "13.7.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-prettier": "1.1.2",
    "typescript": "4.0.2"
  }
}
