{
  "name": "client",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "eject": "react-scripts eject",
    "dev": "HTTPS=true react-scripts start",
    "prebuild": "./bin/prebuild.sh",
    "build": "react-scripts build",
    "postbuild": "./bin/postbuild.sh",
    "analyze": "react-scripts build && source-map-explorer 'build/static/js/*.js'",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:cypress:gui": "./node_modules/.bin/cypress open",
    "test:cypress:headless": "./node_modules/.bin/cypress run --config-file cypress/cypress.json --headless --browser chrome",
    "test:cypress:ci": "./node_modules/.bin/cypress run --config-file cypress/cypress.json",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "chromatic test",
    "lighthouse": "lhci autorun --upload.target=temporary-public-storage"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      ".query.ts",
      ".story.tsx",
      ".type.ts",
      "src/shared/libs/*",
      "src/shared/utils/initSentry.ts"
    ]
  },
  "dependencies": {
    "@opentelemetry/api": "0.10.2",
    "@opentelemetry/exporter-collector": "0.10.2",
    "@opentelemetry/plugin-document-load": "0.9.0",
    "@opentelemetry/plugin-xml-http-request": "0.10.2",
    "@opentelemetry/tracing": "0.10.2",
    "@opentelemetry/web": "0.10.2",
    "@sentry/react": "5.22.3",
    "bulma": "0.9.0",
    "lightstep-opentelemetry-exporter": "0.2.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-observable": "1.2.0",
    "rxjs": "6.6.2"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/node": "7.10.5",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@lhci/cli": "0.5.0",
    "@storybook/addon-actions": "6.0.20",
    "@storybook/addon-links": "6.0.20",
    "@storybook/addons": "6.0.20",
    "@storybook/preset-create-react-app": "3.1.4",
    "@storybook/react": "6.0.20",
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "10.4.9",
    "@testing-library/react-hooks": "3.4.1",
    "@testing-library/user-event": "12.1.3",
    "@types/jest": "26.0.10",
    "@types/node": "14.6.2",
    "@types/react": "16.9.48",
    "@types/react-dom": "16.9.8",
    "@types/react-redux": "7.1.9",
    "@types/react-router-dom": "5.1.5",
    "@types/redux-mock-store": "1.0.2",
    "@types/storybook__react": "5.2.1",
    "cypress": "5.0.0",
    "purgecss": "2.3.0",
    "react-test-renderer": "16.13.1",
    "redux-mock-store": "1.5.4",
    "sitemap": "6.2.0",
    "source-map-explorer": "2.5.0",
    "storybook-chromatic": "4.0.2",
    "typescript": "4.0.2"
  }
}
